{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug with tsx",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["tsx", "watch", "${workspaceFolder}/src/main.ts"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "restart": true
    }
  ]
}